{
  "variables": {
    "centos_password": "centos",
    "root_password": "12345",
    "version": "8.2.2004",
    "sha256sum": "47ab14778c823acae2ee6d365d76a9aed3f95bb8d0add23a06536b58bb5293c0"
  },

  "builders": [
    {
      "vm_name": "{{ user `build_name` }}",
      "iso_urls": [
        "{{ user `repo_url` }}/centos/8/isos/x86_64/CentOS-{{ user `version` }}-x86_64-minimal.iso"
      ],
      "iso_checksum": "sha256:{{ user `sha256sum` }}",
      "iso_target_path": "iso",
      "output_directory": "{{ user `outdir` }}",
      "ssh_username": "root",
      "ssh_password": "{{ user `root_password` }}",
      "ssh_wait_timeout": "20m",
      "http_directory": "{{ user `http_dir` }}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "shutdown_command": "/sbin/halt -h -p",
      "type": "qemu",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "headless": true,
      "memory": 4096,
      "disk_interface": "virtio",
      "disk_size": 4096,
      "format": "raw",
      "cpus": 2
    }
  ]
}
